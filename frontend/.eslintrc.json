{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],             // Require semicolons
    "quotes": ["error", "double"],          // Use double quotes
    "no-unused-vars": ["warn"],             // Warn about unused vars
    "no-console": "off",                     // Allow console.log for debugging
    "prefer-const": "error"                  // Force const instead of let if not reassigned
  }
}
